<UserControl x:Class="Hack.WelcomeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hack" xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="500">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="450"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border CornerRadius="40"
                 Background="Transparent"
                 Width="230"
                 Height="130"
                 BorderThickness="1.7"
                 BorderBrush="AliceBlue"
                 Grid.Row="1"/>

        <Button Grid.Row="1"
                Background="Transparent"
                Height="130"
                Width="230"
                   Foreground="#f2e8cf"
                   FontSize="45"
                   HorizontalAlignment="Center"
                   Content="Start" 
                BorderThickness="0" Click="Button_Click"  
                >
        </Button>
        <Image Margin="10,85,10,85" Source="C:/Users/User/Desktop/resources/LOGO.png" Stretch="Fill"/>




    </Grid>
</UserControl>