<UserControl x:Class="WpfApp2.SwipeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="500"
             FontFamily="Nexa">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="540*"></RowDefinition>
            <RowDefinition Height="150*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Name="ingredientStack" Grid.Row="0">
        </StackPanel>
        <Button Name="btnRecipes" Content="View Recipes"         FontSize="20"
                Foreground="White"
                    Background="Transparent"
                BorderBrush="White"
                            BorderThickness="3"
                    Opacity="0.5" Grid.Row="1" Margin="114,38,114,38" Click="btnRecipes_Click"/>
    </Grid>
</UserControl>
